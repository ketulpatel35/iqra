<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <!--=============== Student Promotion tree view==================-->
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">view.student.tree</field>
            <field name="model">promote.student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Student Tree">
                    <field name="class_id"/>
                    <field name="batch_id"/>
                    <field name="section_ids"/>
                    <field name="promote_to_class"/>
                    <field name="promote_to_batch"/>
                    <field name="promote_to_section"/>
                </tree>
            </field>
        </record>
        
        <!--=============== Student Promotion search view==================-->
        <record id="view_student_promotion_search" model="ir.ui.view">
            <field name="name">view.student.promotion.search</field>
            <field name="model">promote.student</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Student Promotion search view">
                    <field name="class_id"/>
                    <field name="section_ids"/>
                    <field name="batch_id"/>
                    <field name="promote_to_class"/>
                    <field name="promote_to_batch"/>
                    <field name="promote_to_section"/>
                </search>
            </field>
        </record>
      
        <!-- =============== Inherited Student form view==================-->
        <record id="view_student_parent_form_inherit_promotion" model="ir.ui.view">
            <field name="name">view.student.parent.form.inherit.promotion</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="bista_edu.view_student_parent_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/div/group/group/field[@name='active']" position="after">
                    <field name="promoted"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Fees Structure']/group/group/div/button[@name='update_fee_structure']" position="before">
                    <button name="confirm_promoted_fee_structure" string="Confirm" type="object"
                            class="oe_highlight" attrs="{'invisible' : [('promoted_fee_structure_done','!=',False)]}" />
                    <button name="reverse_promoted_fee_structure" string="Reverse" type="object"
                            class="oe_highlight" attrs="{'invisible':['|',('promoted_fee_structure_done','!=',True),('promoted_fee_structure_confirm','!=',False)]}" />
                    <button name="confirm_done_promoted_fee_structure" string="Done" type="object"
                            class="oe_highlight" attrs="{'invisible':['|',('promoted_fee_structure_done','!=',True),('promoted_fee_structure_confirm','!=',False)]}"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Fees Structure']/group" position="after">
                    <field name="promoted_fee_structure_confirm" invisible="1"/>
                    <field name="promoted_fee_structure_done" invisible="1"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@string='Fees Structure']" position="after">
                    <page string="Fee Structure History">
                        <separator string="Fee Structure History"/>
                        <field name="student_fee_history">
                            <tree editable="bottom">
                                <field name="sequence" string="Priority"/>
                                <field name="name"/>
                                <field name="amount"/>
                                <field name="discount"/>
                                <field name="discount_amount"/>
                                <field name="type"/>
                                <field name="fee_pay_type"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record> 
        
        <!--=============== Student Promotion form view==================-->
        <record id="view_promotion_form" model="ir.ui.view">
            <field name="name">view.promotion.form</field>
            <field name="model">promote.student</field>
            <field name="arch" type="xml">
                <form string="Student Promotion">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="class_id" required="1"/>
                                <field name="batch_id" required="1"/>
                                <field name="section_ids" widget="many2many_tags" required="1"/>
                            </group>
                            <group>
                                <field name="promote_to_class" required="1"/>
                                <field name="promote_to_batch" required="1"/>
                                <field name="promote_to_section" required="1"/>
                            </group>
                        </group>
                        <group>
                            <button name="student_promotion" string="Promote" type="object" 
                                    attrs="{'invisible':[('state','=','promote')]}" class="oe_highlight"
                                    confirm="Are you sure to promote these students?"/>
                        </group>
                        <notebook>
                            <page string="Student Promotion">
                                <field name="student_line" attrs="{'readonly' : [('state','=','promote')]}">
                                    <tree string="Students" editable="bottom">
                                        <field name="student_id"/>
                                        <field name="current_acad_year" readonly="1"/>
                                        <field name="current_acad_class" readonly="1"/>
                                        <field name="current_acad_section" readonly="1"/>
                                        <field name="new_acad_year"/>
                                        <field name="new_acad_class"/>
                                        <field name="new_acad_section"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!--============== Action for Student Promotion =================-->
        <record id="action_student_promotion" model="ir.actions.act_window">
            <field name="name">Student Promotion</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">promote.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</openerp>