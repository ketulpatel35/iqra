<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        
        <!-- =========== confirm fee structure tree view ============= -->
        <record id="view_confirm_fee_tree_view" model="ir.ui.view">
            <field name="name">view.confirm.fee.tree.view</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Confirm Fee Structure Tree">
                    <field name="student_id"/>
                    <field name="name"/>
                    <field name="batch_id"/>
                    <field name="class_id"/>
                    <field name="section_id"/>
                </tree>
            </field>
        </record>
        
        <!-- ============= confirm fee structure search view =========== -->
        <record id="view_confirm_fee_search" model="ir.ui.view">
            <field name="name">confirm.fee.serch.view</field>
            <field name="model">res.partner</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Confirm Fee Structure search view">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="course_id"/>
                    <field name="section_id"/>
                    <field name="batch_id"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Section" domain="[]" context="{'group_by':'section_id'}"/>
                        <filter string="Course" domain="[]" context="{'group_by':'course_id'}"/>
                        <filter string="Batch" domain="[]" context="{'group_by':'batch_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!--=============== confirm fee structure action ==================-->
        <record id="act_confirm_fee_view" model="ir.actions.act_window">
            <field name="name">Confirm Fee Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('active','=',True),('strike_off','=',False),('promoted','=',True),('promoted_fee_structure_confirm','=',False)]</field>
            <field name="search_view_id" ref="view_confirm_fee_search"/>
        </record>
        
        <record id="action_confirm_fee_kanban_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="0"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="bista_edu.student_parent_kanban_view"/>
            <field name="act_window_id" ref="act_confirm_fee_view"/>
        </record>  

        <record id="action_confirm_fee_tree_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_confirm_fee_tree_view"/>
            <field name="act_window_id" ref="act_confirm_fee_view"/>
        </record>
        
        <record id="action_confirm_fee_form_view" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="bista_edu.view_student_parent_form"/>
            <field name="act_window_id" ref="act_confirm_fee_view"/>
        </record>
    </data>
</openerp>